<style type="text/css">
  /* Ensure full height for centering */
  .main-login-wrapper {
    height: 95%;
    margin: 0;
    padding: 0;
    background-color: #d3d3d399;
    font-family: Arial, sans-serif;
    display: flex;
    flex-direction: column;
  }

  /* Wrapper to center the content vertically and horizontally */
  .main-login-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Full height of the viewport */
  }

  /* Styling the main login form */
  .main-login {
    background-color: white;
    padding: 40px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    width: 100%;
    max-width: 400px; /* Restrict the width */
  }

  .main-login h1 {
    margin-bottom: 20px;
  }

  .form-main {
    display: flex;
    flex-direction: column;
    gap: 15px; /* Add spacing between form fields */
  }

  .form-main div {
    text-align: left;
  }

  /* Styling input fields and button */
  input[type="email"],
  input[type="password"] {
    width: 100%;
    height: 25px;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  input[type="submit"] {
    width: 50%;
    padding: 10px;
    background-color: black;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .sumbit-button {
    display: flex;
    justify-content: center;
  }

  input[type="submit"]:hover {
    background-color: gray;
  }

  a {
    margin-top: 10px;
    display: block;
    text-align: center;
    color: #333;
    text-decoration: none;
  }

  /* Flash message styling */
  .flash.alert {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    padding: 10px;
    margin-bottom: 10px;
    text-align: center;
    border-radius: 5px;
  }

  .flash.notice {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
    padding: 10px;
    margin-bottom: 10px;
    text-align: center;
    border-radius: 5px;
  }
</style>

<div class="main-login-wrapper">
  <div>
    <h1>Teacher Login</h1>
  </div>
  <div>
    <div class="main-login">
      <% if flash[:alert] %>
        <div class="flash alert" id="flash-message"><%= flash[:alert] %></div>
      <% elsif flash[:notice] %>
        <div class="flash notice" id="flash-message"><%= flash[:notice] %></div>
      <% end %><br>

    <%= form_with url: teachers_login_path, local: true, data: { turbo: false } do |f| %>
        <div class="form-main">
          <div>
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email %>
          </div>

          <div>
            <%= f.label :password, "Password" %>
            <%= f.password_field :password %>
          </div>

          <div class="sumbit-button">
            <%= f.submit "Login" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  setTimeout(function() {
    const flashMessage = document.getElementById('flash-message');
    if (flashMessage) {
      flashMessage.style.transition = 'opacity 0.5s ease';
      flashMessage.style.opacity = '0';
      setTimeout(() => flashMessage.remove(), 500);
    }
  }, 700);
</script>
